// }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patience {
  id         String     @id @default(dbgenerated("gen_random_uuid()"))
  gender     String
  age        Int
  occupation String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  deletedAt  DateTime?
  Timeline   Timeline[]
}

model Timeline {
  id           String    @id @default(dbgenerated("gen_random_uuid()"))
  from         DateTime
  to           DateTime
  detail       String
  locationType String
  locationName String
  patience     Patience  @relation(fields: [patienceId], references: [id], onDelete: Cascade)
  patienceId   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
}
